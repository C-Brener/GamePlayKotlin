<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="22dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        >
        <ImageView
            android:id="@+id/imageContentMatch"
            android:layout_width="64dp"
            android:layout_height="68dp"
            android:contentDescription="@string/image_content_match"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/lol_icon"
            />
        <TextView
            android:id="@+id/nameMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageContentMatch"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:fontFamily="@font/rajdhani_bold"
            android:textColor="@color/heading"
            android:text="@string/legends"
            />
        <TextView
            android:id="@+id/typeMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="29dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="13sp"
            android:textColor="@color/heading"
            android:text="@string/ranked"
            />
        <TextView
            android:id="@+id/nameGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/nameMatch"
            app:layout_constraintStart_toEndOf="@id/imageContentMatch"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="13sp"
            android:textColor="@color/heading"
            android:text="@string/lol"
            />
        <ImageView
            android:id="@+id/iconCalendar"
            android:layout_width="13.33dp"
            android:layout_height="13.33dp"
            app:layout_constraintTop_toBottomOf="@id/nameGame"
            app:layout_constraintStart_toEndOf="@id/imageContentMatch"
            android:src="@drawable/calendar"
            android:layout_marginStart="21dp"
            android:layout_marginTop="9dp"
            android:contentDescription="@string/icon" />
        <TextView
            android:id="@+id/date_and_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iconCalendar"
            android:layout_marginStart="13dp"
            app:layout_constraintTop_toBottomOf="@id/nameGame"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="13sp"
            android:textColor="@color/heading"
            android:text="@string/date_and_hour"
            />
        <TextView
        android:id="@+id/playerQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="29dp"
        app:layout_constraintTop_toBottomOf="@id/typeMatch"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/inter_regular"
        android:textSize="13sp"
        android:textColor="@color/heading"
        android:text="@string/quantity_player"
        />
        <ImageView
            android:id="@+id/iconUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/playerQuantity"
            app:layout_constraintTop_toBottomOf="@id/typeMatch"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/ic_icon_user"
            android:contentDescription="@string/iconuser" />
        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_marginTop="18dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iconUser"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_line"
            android:layout_marginStart="60dp"
            android:contentDescription="@string/line" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>